# Database - PRODUCCIÓN: Usar DigitalOcean PostgreSQL
# DESARROLLO (opcional): DATABASE_URL="file:./dev.db"
# PRODUCCIÓN (requerido): Usar la URL de DigitalOcean App Platform
DATABASE_URL="postgresql://rent360_user:secure_password@db-host:5432/rent360_prod?sslmode=require"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# JWT - CRÍTICO: Generar secrets únicos para producción
JWT_SECRET="your-jwt-secret-key-here-minimum-32-chars"
JWT_REFRESH_SECRET="your-jwt-refresh-secret-key-here-minimum-32-chars"

# Email (SendGrid)
SENDGRID_API_KEY="your-sendgrid-api-key-here"
EMAIL_FROM="noreply@rent360.cl"

# File Upload (Cloudinary)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Real Estate APIs
REAL_ESTATE_API_URL="https://api.realestate.com"
REAL_ESTATE_API_KEY="your-real-estate-api-key"
VALUATION_API_URL="https://api.valuation.com"
VALUATION_API_KEY="your-valuation-api-key"
MAPS_API_URL="https://api.maps.com"
MAPS_API_KEY="your-maps-api-key"

# Payment APIs - CRÍTICO: Nunca usar claves de prueba en producción
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key-here"
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key-here"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret-here"

PAYPAL_CLIENT_ID="your-paypal-client-id-here"
PAYPAL_CLIENT_SECRET="your-paypal-client-secret-here"
PAYPAL_ENVIRONMENT="sandbox" # or "live"

WEBPAY_COMMERCE_CODE="your-webpay-commerce-code-here"
WEBPAY_API_KEY="your-webpay-api-key-here"
WEBPAY_ENVIRONMENT="integration" # or "production"

# RUT Validation API
RUT_VALIDATION_ENABLED="false"
RUT_API_URL="https://api.rutvalidation.com"

# Logging
LOG_LEVEL="info" # debug, info, warn, error
LOG_TO_FILE="false"
LOG_FILE_PATH="./logs/rent360.log"

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000" # 15 minutes

# Security - CRÍTICO: Configurar correctamente en producción
CORS_ORIGIN="http://localhost:3000"
ENCRYPTION_KEY="your-encryption-key-here-minimum-32-chars"

# Electronic Signature Providers - CRÍTICO: Proveedores autorizados por SII
# TrustFactory (Proveedor principal)
TRUSTFACTORY_API_KEY="your-trustfactory-api-key-here"
TRUSTFACTORY_API_SECRET="your-trustfactory-api-secret-here"
TRUSTFACTORY_CERTIFICATE_ID="TF-2024-XXX"
TRUSTFACTORY_BASE_URL="https://api.trustfactory.cl/v2"

# FirmaPro (Especializado en contratos inmobiliarios)
FIRMAPRO_API_KEY="your-firmapro-api-key-here"
FIRMAPRO_API_SECRET="your-firmapro-api-secret-here"
FIRMAPRO_CERTIFICATE_ID="FP-2024-XXX"
FIRMAPRO_BASE_URL="https://api.firmapro.cl/v3"

# DigitalSign (Integración bancaria opcional)
DIGITALSIGN_API_KEY="your-digitalsign-api-key-here"
DIGITALSIGN_API_SECRET="your-digitalsign-api-secret-here"
DIGITALSIGN_CERTIFICATE_ID="DS-2024-XXX"
DIGITALSIGN_BANK_INTEGRATION="false"
DIGITALSIGN_BASE_URL="https://api.digitalsign.cl/v2"

# Monitoring
SENTRY_DSN="your-sentry-dsn"
ANALYTICS_ID="your-analytics-id"

# Feature Flags
ENABLE_REAL_ESTATE_API="true"
ENABLE_PAYMENT_PROCESSING="true"
ENABLE_EMAIL_NOTIFICATIONS="true"
ENABLE_SMS_NOTIFICATIONS="false"
ENABLE_PUSH_NOTIFICATIONS="false"

# AI Chatbot Providers (Opcional - si no se configura, usa lógica local gratuita)
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_MODEL="gpt-3.5-turbo"
OPENAI_MAX_TOKENS="1000"
OPENAI_TEMPERATURE="0.7"

ANTHROPIC_API_KEY="your-anthropic-api-key-here"
ANTHROPIC_MODEL="claude-3-sonnet-20240229"
ANTHROPIC_MAX_TOKENS="1000"
ANTHROPIC_TEMPERATURE="0.7"

GOOGLE_AI_API_KEY="your-google-ai-api-key-here"
GOOGLE_MODEL="gemini-pro"
GOOGLE_MAX_TOKENS="1000"
GOOGLE_TEMPERATURE="0.7"

# WebSocket Configuration
NEXT_PUBLIC_WS_URL="" # Dejar vacío para usar window.location.origin automáticamente
NEXT_PUBLIC_APP_URL="https://rent360management-2yxgz.ondigitalocean.app"

# Production - DigitalOcean App Platform
NODE_ENV="production"
NEXT_TELEMETRY_DISABLED="1"
PORT="3000"

# DigitalOcean App Platform Variables (se configuran automáticamente)
# DATABASE_URL=${rent360-db.DATABASE_URL}  # Configurado en App Platform
# REDIS_URL=${redis.DATABASE_URL}         # Opcional para cache

# Development
# NODE_ENV="development"
# DEBUG="rent360:*"

