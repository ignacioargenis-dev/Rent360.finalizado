  client User   @relation("ClientRatings", fields: [clientId], references: [id], onDelete: Cascade)

  @@unique([visitId, clientId]) // Un cliente solo puede calificar una visita una vez
  @@map("runner_ratings")
  @@index([visitId])
  @@index([runnerId])
  @@index([clientId])
  @@index([createdAt])
}

